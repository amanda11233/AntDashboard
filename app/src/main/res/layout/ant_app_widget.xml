<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.AntDashboard.AppWidgetContainer">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <Button
            android:id="@+id/switchbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginRight="20dp"
            android:background="#1f2855"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:text="Turn on"

            android:layout_toLeftOf="@+id/btngrp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/offbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginRight="20dp"
            android:background="#1f2855"
            android:textSize="30dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:text="Turn off"

            android:layout_toLeftOf="@+id/btngrp"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/btngrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">



            <ImageButton
                android:id="@+id/fwdbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="10dp"
                android:src="@drawable/ic_f"
                android:text="FWD"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/revbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="10dp"
                android:src="@drawable/ic_r__1_"
                android:text="REV" />

            <ImageButton
                android:id="@+id/uphill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="10dp"
                android:src="@drawable/ic_road"
                android:text="FWD"  />

            <ImageButton
                android:id="@+id/lightsbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_headlight"
                android:layout_marginRight="20dp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/lightsoffbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_headlight_off" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_map"
                android:background="@color/white"
                android:padding="10dp"
                android:id="@+id/open_map"
                />

            <ImageButton
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:backgroundTint="@color/ant_red"
                android:src="@drawable/ic_profile" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>